<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.example.splat.tarika_opravypc.pridajRepair">


    <TextView
        android:id="@+id/objectHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Predmet opravy"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/objectEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Zadajte predmet opravy"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/aboutHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popis opravy"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/aboutEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Zadajte popis opravy"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/dateHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dátum opravy"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/dateEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pridanie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pridaj"
            android:onClick="pridanie"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/zrusenie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Zrušiť"
            android:onClick="zrusenie"/>

    </LinearLayout>
</LinearLayout>
